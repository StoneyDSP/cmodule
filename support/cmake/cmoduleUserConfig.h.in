/**
 * @file @PROJECT_NAME@ User configuration header
 *
 * @brief cmakeDefined project configuration information.
 *
 * Values wrapped in 'at' symbols are computed by CMake
 * at configure time.
 *
 * Values wrapped in '${}' symbols are *not* computed
 * by CMake at configure time, allowing for comments.
 *
 */

#pragma once

#ifndef @PROJECT_NAME_UPPER@_CONFIG_H_INCLUDED
#define @PROJECT_NAME_UPPER@_CONFIG_H_INCLUDED

#define @PROJECT_NAME_UPPER@ "@PROJECT_NAME@"
#define @PROJECT_NAME_UPPER@_DESCRIPTION "@PROJECT_DESCRIPTION@"
#define @PROJECT_NAME_UPPER@_VERSION "@PROJECT_VERSION@"
#define @PROJECT_NAME_UPPER@_HOMEPAGE_URL "@PROJECT_HOMEPAGE_URL@"
#define @PROJECT_NAME_UPPER@_SOURCE_DIR "@PROJECT_SOURCE_DIR@"
#define @PROJECT_NAME_UPPER@_BINARY_DIR "@PROJECT_BINARY_DIR@"

#define @PROJECT_NAME_UPPER@_BUILD_TYPE "@CMAKE_BUILD_TYPE@"

#define @PROJECT_NAME_UPPER@_VERSION_MAJOR "@PROJECT_VERSION_MAJOR@"
#define @PROJECT_NAME_UPPER@_VERSION_MINOR "@PROJECT_VERSION_MINOR@"
#define @PROJECT_NAME_UPPER@_VERSION_PATCH "@PROJECT_VERSION_PATCH@"
#define @PROJECT_NAME_UPPER@_VERSION_TWEAK "@PROJECT_VERSION_TWEAK@"

#define @PROJECT_NAME_UPPER@_BIN_DIR "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_BINDIR@"
#define @PROJECT_NAME_UPPER@_LIB_DIR "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_LIBDIR@"
#define @PROJECT_NAME_UPPER@_SHR_DIR "@CMAKE_INSTALL_PREFIX@/@CMAKE_INSTALL_DATAROOTDIR@"

// if "${PROJECT_IS_TOP_LEVEL}" == "ON"
#if @PROJECT_IS_TOP_LEVEL@ == ON

	#define @PROJECT_NAME_UPPER@_IS_TOP_LEVEL true

#else

	#define @PROJECT_NAME_UPPER@_IS_TOP_LEVEL false

	#define PROJECT_NAME "@PROJECT_NAME@"
	#define PROJECT_DESCRIPTION "@PROJECT_DESCRIPTION@"
	#define PROJECT_VERSION "@PROJECT_VERSION@"
	#define PROJECT_HOMEPAGE_URL "@PROJECT_HOMEPAGE_URL@"
	#define PROJECT_SOURCE_DIR "@PROJECT_SOURCE_DIR@"
	#define PROJECT_BINARY_DIR "@PROJECT_BINARY_DIR@"

#endif // "${PROJECT_IS_TOP_LEVEL}" == "ON"

#endif // @PROJECT_NAME_UPPER@_CONFIG_H_INCLUDED
